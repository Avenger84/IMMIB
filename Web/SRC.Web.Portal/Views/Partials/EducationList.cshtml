@using SRC.Web.Portal.Models;
@model EducationModel

@if (Model.EducationList == null || Model.EducationList.Count == 0)
{
    <div class="alert alert-warning" role="alert">
        <span class="glyphicon glyphicon-warning-sign" aria-hidden="true"></span>
        <span class="sr-only">Uyarı:</span>
        Eğitim kaydı bulunamadı.
    </div>
    return;
}

<table class="table table-hover p-table" id="tblEducation">
    <thead>
        <tr>
            <th>Eğitim Adı</th>
            <th>Eğitmen</th>
            @*<th>Kontenjan</th>*@
            <th>Süre</th>
            <th>Şehir</th>
            <th>Durum</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var education in Model.EducationList)
        {
            <tr>
                <td class="p-name">
                    <a data-toggle="modal" type="educationdetail" href="#educationModal" id="@education.Id">@education.Name</a>
                    <br>
                    <small>@education.FormattedEducationDate</small>
                </td>
                <td>
                    <a data-toggle="modal" type="educator" href="#educationModal">@education.Contact.Name</a>
                </td>
                @*<td class="p-progress">
                        <div class="progress progress-xs">
                            <div style="width: 87%;" class="progress-bar progress-bar-success"></div>
                        </div>
                        <small>10% Dolu </small>
                    </td>*@
                <td>
                    <span class="label label-primary">@education.EducationPeriod.Value gün</span>
                </td>
                <td>
                    <p>@education.City.Name</p>
                </td>
                <td>
                    <p>@education.Status.Value</p>
                </td>
                <td>
                    @if (education.Attendance == null)
                    {
                        <a data-toggle="modal" type="educationAttendance" href="#attendanceModal" class="btn btn-primary btn-xs" id="@education.Id"><i class="fa fa-folder"></i> Başvur </a>
                    }
                    else
                    {
                        <a data-toggle="modal" type="educationCancelAttendance" href="#attendanceModal" class="btn btn-danger btn-xs" id="@education.Attendance.Id"><i class="fa fa-ban"></i> İptal </a>
                    }
                    
                    <a data-toggle="modal" type="detail" href="#educationModal" class="btn btn-info btn-xs"><i class="fa fa-pencil"></i> Detay </a>
                </td>
            </tr>
        }
    </tbody>

</table>

