@using SRC.Library.Entities.CrmEntities
@using SRC.Library.Entities.CustomEntities;

@model ResponseContainer<EducationAttendance>

    <section id="main-content" style="width:80%;margin:auto;">
        <section class="wrapper">
            <!-- page start-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel" style="padding:20px;">
                        <div class="bio-graph-heading project-heading" style="padding:10px 50px;">
                            Eğitim Başvuru
                        </div>
                        <div class="panel-body">
                            @if (!Model.Succes)
                            {
                                @Html.Raw(Model.Message)
                            }
                            else
                            {
                                <div class="row">
                                    <div class="col-lg-12">
                                        <h4>Katılım Kodu: @Html.Raw(Model.Result.Code)</h4> 
                                    </div>
                                </div>
                                
                                <div class="row">
                                    <div class="col-lg-12">
                                        <label>
                                            <input type="checkbox" value="" id="chkAttendanceCancel">
                                            <span class="label label-default"> Kodu yukarıda yazılı olan eğitimin iptalini kabul ediyorum</span>
                                        </label>
                                    </div>
                                </div>
                                <div class="row" id="rowCancelError" style="display:none;">
                                    <div class="col-lg-12">
                                        <div class="alert alert-warning" role="alert">Eğitim iptalini onaylamalısınız.</div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <a type="cancelEducation" class="btn btn-primary" href="#" id="@ViewBag.Id" role="button">İptal Et</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </section>
                </div>



            </div>
            <!-- page end-->
        </section>
    </section>

