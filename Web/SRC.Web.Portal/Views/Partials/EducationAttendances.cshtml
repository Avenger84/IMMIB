@using SRC.Library.Entities.CrmEntities
@using SRC.Library.Entities.CustomEntities;
@model ResponseContainer<DynamicPage>
    <section id="main-content" style="width:80%;margin:auto;">
        <section class="wrapper">
            <!-- page start-->
            <div class="row">
                <div class="col-lg-12">
                    <section class="panel" style="padding:20px;">
                        <div class="bio-graph-heading project-heading" style="padding:10px 50px;">
                            Eğitim Başvuru
                        </div>
                        <div class="panel-body">
                            @if (!Model.Succes)
                            {
                                @Html.Raw(Model.Message)
                            }
                            else
                            {
                                @Html.Raw(Model.Result.Content)
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="checkbox">
                                            <label>
                                                <input type="checkbox" value="" id="chkAttendance">
                                                <span class="label label-default"> Eğitim ve başvuru koşullarını kabul ediyorum</span>
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row" id="rowApplyError" style="display:none;">
                                    <div class="col-lg-12">
                                        <div class="alert alert-warning" role="alert">Eğitim başvuru ve koşullarını kabul ediyorum onaylamalısınız.</div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-lg-12">
                                        <a type="applyEducation" class="btn btn-primary" href="#" id="@ViewBag.Id" role="button">Eğitime Başvur</a>
                                    </div>
                                </div>
                            }
                        </div>
                    </section>
                </div>

            </div>
            <!-- page end-->
        </section>
    </section>
