@using SRC.Web.Portal.Models
@model HomePageModel

@{
    ViewBag.Title = "Ana Sayfa";
}

<section id="main-content" style="width:80%;margin:auto;">
    <section class="wrapper">
        <!-- page start-->
        <div class="row">
            <div class="col-lg-12">
                <section class="panel">
                    <div class="panel-body">
                        @Html.Partial("_HomePageSlider", @Model.SliderData)
                    </div>
                </section>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-6">
                <section class="panel transparentGray" style="min-height:300px;">
                    <div class="panel-body">
                        @Html.Action("ComingEducations", "Partials")
                    </div>
                </section>
            </div>
            <div class="col-lg-6">
                <section class="panel transparentGray" style="min-height:300px;">
                    @Html.Action("DoneEducations", "Partials")
                </section>
            </div>
        </div>
        <!-- page end-->
    </section>
</section>

@section scripts{
    <script>

        $(window).load(function () {
            $('.flexslider').flexslider({
                animation: "slide",
                start: function (slider) {
                    $('body').removeClass('loading');
                }
            });
        });
    </script>
}