@using SRC.Library.Entities.CrmEntities
@model Contact

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="main-content" style="width: 90%; margin: auto;">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <div class="row">
            <aside class="profile-nav col-lg-3">
                <section class="panel">
                    <div class="user-heading round">
                        <a href="#">
                            <img src="../../img/profile-avatar.jpg" alt="">
                        </a>
                        <h1>Volkan Serter</h1>
                        <p>volkan@serter.gmail.com</p>
                    </div>
                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="Index"> <i class="fa fa-user"></i> Profil</a></li>
                        <li><a href="Edit"> <i class="fa fa-edit"></i> Profil Düzenle</a></li>
                        <li><a href="profileeducation.html"> <i class="fa fa-calendar"></i> Eğitimlerim <span class="label label-danger pull-right r-activity">9</span></a></li>
                    </ul>
                </section>
            </aside>
            <aside class="profile-info col-lg-9">
                <section class="panel">
                    <div class="panel-body bio-graph-info">
                        <h1>Bio Graph</h1>
                        <div class="row">
                            <div class="bio-row">
                                <p><span>İsim </span>: @Model.FirstName</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Soyisim </span>: @Model.LastName</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Doğum Tarihi</span>: @Model.BirthDate</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Cinsiyet </span>: @Model.Gender.Value</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Cep Telefonu </span>: @Model.MobilePhone</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Email </span>: @Model.EmailAddress</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Gsm Operatörü </span>: @Model.GsmOperator.Name</p>
                            </div>
                            <div class="bio-row">
                                <p><span>İş Telefonu </span>: @Model.WorkPhone</p>
                            </div>
                        </div>
                    </div>
                </section>
                <section>
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="bio-chart">
                                        <input class="knob" data-width="100" data-height="100" data-displayprevious=true data-thickness=".2" value="35" data-fgcolor="#e06b7d" data-bgcolor="#e8e8e8">
                                    </div>
                                    <div class="bio-desk">
                                        <h4 class="red">Katıldığım Eğitimlerim</h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="bio-chart">
                                        <input class="knob" data-width="100" data-height="100" data-displayprevious=true data-thickness=".2" value="63" data-fgcolor="#4CC5CD" data-bgcolor="#e8e8e8">
                                    </div>
                                    <div class="bio-desk">
                                        <h4 class="terques">Kaydı Onaylanan Eğitimlerim </h4>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="panel">
                                <div class="panel-body">
                                    <div class="bio-chart">
                                        <input class="knob" data-width="100" data-height="100" data-displayprevious=true data-thickness=".2" value="75" data-fgcolor="#96be4b" data-bgcolor="#e8e8e8">
                                    </div>
                                    <div class="bio-desk">
                                        <h4 class="green">Ödeme Onayı Bekleyen Eğitimlerim</h4>
                                        <p>Started : 15 July</p>
                                        <p>Deadline : 15 August</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </aside>
        </div>
        <!-- page end-->
    </section>
</section>


@section Profile{
    <script>
        $(".knob").knob();
    </script>
}


