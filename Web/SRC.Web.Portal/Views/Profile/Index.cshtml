@using SRC.Library.Entities.CrmEntities
@model Contact

@{
    ViewBag.Title = "Profil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section id="main-content" style="width: 90%; margin: auto;">
    <section class="wrapper site-min-height">
        <!-- page start-->
        <div class="row">
            <aside class="profile-nav col-lg-3">
                <section class="panel">
                    <div class="user-heading round">
                        <a href="#">
                            <img src="../../img/profile-avatar.jpg" alt="">
                        </a>
                        <h1>Volkan Serter</h1>
                        <p>volkan@serter.gmail.com</p>
                    </div>
                    <ul class="nav nav-pills nav-stacked">
                        <li class="active"><a href="~/Profile"> <i class="fa fa-user"></i> Profil</a></li>
                        <li><a href="~/Profile/Edit"> <i class="fa fa-edit"></i> Profil Düzenle</a></li>
                        <li><a href="profileeducation.html"> <i class="fa fa-calendar"></i> Eğitimlerim <span class="label label-danger pull-right r-activity">9</span></a></li>
                    </ul>
                </section>
            </aside>
            <aside class="profile-info col-lg-9">
                <section class="panel transparentGray">
                    <div class="panel-body bio-graph-info">
                        <h1>Bio Graph</h1>
                        <div class="row">
                            <div class="bio-row">
                                <p><span>İsim </span>: @Model.FirstName</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Soyisim </span>: @Model.LastName</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Doğum Tarihi</span>: @Model.BirthDate</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Cinsiyet </span>: @Model.Gender.Value</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Cep Telefonu </span>: @Model.MobilePhone</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Email </span>: @Model.EmailAddress</p>
                            </div>
                            <div class="bio-row">
                                <p><span>Gsm Operatörü </span>: @Model.GsmOperator.Name</p>
                            </div>
                            <div class="bio-row">
                                <p><span>İş Telefonu </span>: @Model.WorkPhone</p>
                            </div>
                        </div>
                    </div>
                </section>
            </aside>
        </div>
        <!-- page end-->
    </section>
</section>


